<html>

  <head>
    <link href="style.css" rel="stylesheet" type="text/css">
  </head>
  
  <h1>
    Links
  </h1>

  <ul id='links'> <!-- ul = unordered list, ol = ordered list -->
    <% @links.each do |link| %>
      <li> <!-- li = list, this is a child tag to the parent tag -->
        ID: <%= link.id %>
        Title: <%= link.title %>
        URL: <%= link.url %>
        <!-- Tag: <%= link.tags.map{|x| "<a href='/tags/#{x.name}'>#{x.name}</a>"} %> -->
      </li>
    <% end %>
  </ul>

  <form action = '/tag' method='post'>
    <label for='search'>
      Search Tags:
      <input type='text' name='search'>
    </label>
    <input type='submit' value='Search'>
  </form>
</html>
